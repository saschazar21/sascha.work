{% macro experiencelist(kind) %}
  <ul>
    {% for item in kind %}
      <li {% if loop.index0 > 2 %}hidden{% endif %}>
        <section>
          <span>{{ item.start.year }}-{% if item.end %}{{ item.end.year}}{% else %}current{% endif %}</span>
          <h3>{{ item.position or item.programme }}{% if item.graduation %}, {{ item.graduation }}{% endif %}</h3>
          <span><a href="{{ item.url }}" rel="noindex nofollow noopener noreferrer" target="_blank">{{ item.institution }}</a> in {{ item.city }}</span>
        </section>
      </li>
    {% if loop.length > 2 and loop.last %}
      <li>
        See all
      </li>
    {% endif %}
    {% endfor %}
  </ul>
{% endmacro %}

