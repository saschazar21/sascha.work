{% macro experiencelist(kind) %}
  <ul class="experience-list">
    {% for item in kind %}
      <li {% if loop.index0 > 2 %}hidden [hidden]="!showExperience"{% endif %}>
        <section>
          <span role="heading" aria-level="4">{{ item.start.year }}-{% if item.end %}{{ item.end.year}}{% else %}current{% endif %}</span>
          <h3>{{ item.position or item.programme }}{% if item.graduation %}, <span class="graduation">{{ item.graduation }}</span>{% endif %}</h3>
          <span><a href="{{ item.url }}" aria-label="Visit {{ item.institution }}'s website" title="{{ item.institution }}" rel="noindex nofollow noopener noreferrer" target="_blank">{{ item.institution }}</a> in {{ item.city }}</span>
        </section>
      </li>
    {% if loop.length > 2 and loop.last %}
      <li class="see-all" [hidden]="showExperience">
        <button on="tap:AMP.setState({ showExperience: !showExperience })">See all &rarr;</button>
      </li>
    {% endif %}
    {% endfor %}
  </ul>
{% endmacro %}

