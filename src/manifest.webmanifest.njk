---
permalink: manifest.webmanifest
eleventyExcludeFromCollections: true
---
{% json 'manifest' %}
{
  "name": "{{ pkg.name }}",
  "short_name": "{{ pkg.short_name }}",
  "description": "{{ pkg.description }}",
  "start_url": "/?utm_source=pwa",
  "display": "standalone",
  "background_color": "#fffffa",
  "theme_color": "{{ pkg.color }}",
  "icons": [
    {
      "src": "/assets/img/rounded-192.png",
      "sizes": "192x192",
      "type": "image/png",
      "purpose": "any"
    },
    {
      "src": "/assets/img/rounded-512.png",
      "sizes": "512x512",
      "type": "image/png",
      "purpose": "any"
    },
    {
      "src": "/assets/img/maskable-192.png",
      "sizes": "192x192",
      "type": "image/png",
      "purpose": "maskable"
    },
    {
      "src": "/assets/img/maskable-512.png",
      "sizes": "512x512",
      "type": "image/png",
      "purpose": "maskable"
    }
  ],
  "screenshots": [
    {
      "src": "/assets/img/screenshot_portrait_light.jpg",
      "sizes": "576x1024",
      "type": "image/jpg",
      "form_factor": "narrow"
    },
    {
      "src": "/assets/img/screenshot_portrait_dark.jpg",
      "sizes": "576x1024",
      "type": "image/jpg",
      "form_factor": "narrow"
    },
    {
      "src": "/assets/img/screenshot_landscape_light.jpg",
      "sizes": "1024x768",
      "type": "image/jpg",
      "form_factor": "wide"
    },
    {
      "src": "/assets/img/screenshot_landscape_dark.jpg",
      "sizes": "1024x768",
      "type": "image/jpg",
      "form_factor": "wide"
    }
  ]
}
{% endjson %}

{% getBundle 'json',
'manifest' %}